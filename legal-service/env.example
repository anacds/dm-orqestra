# OpenAI API Key (required)
OPENAI_API_KEY=your_openai_api_key_here

# Weaviate Configuration
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/legal_service

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0
CACHE_ENABLED=true
CACHE_TTL=3600

# Logging
LOG_LEVEL=INFO

# A2A Protocol (base URL; A2A mounted at /a2a)
# GET /a2a/.well-known/agent-card.json | POST /a2a/v1/message:send ou .../message/send
# Em message use "role": 1 (user) ou 2 (agent). Ver app/a2a/README.md.
# Default: http://localhost:8005. In Docker use http://legal-service:8005 or public URL.
A2A_BASE_URL=http://localhost:8005
