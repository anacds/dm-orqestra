{
	"info": {
		"_postman_id": "auth-service",
		"name": "Auth Service",
		"description": "Authentication and user management endpoints",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Register",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\",\n  \"full_name\": \"John Doe\"\n}"
				},
				"url": {
					"raw": "{{auth_service_url}}/api/auth/register",
					"host": ["{{auth_service_url}}"],
					"path": ["api", "auth", "register"]
				}
			}
		},
		{
			"name": "Login",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/x-www-form-urlencoded"
					}
				],
				"body": {
					"mode": "urlencoded",
					"urlencoded": [
						{
							"key": "username",
							"value": "ana@email.com",
							"type": "text"
						},
						{
							"key": "password",
							"value": "123",
							"type": "text"
						}
					]
				},
				"url": {
					"raw": "{{auth_service_url}}/api/auth/login",
					"host": ["{{auth_service_url}}"],
					"path": ["api", "auth", "login"]
				}
			},
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 200) {",
							"    const jsonData = pm.response.json();",
							"    pm.environment.set('access_token', jsonData.access_token);",
							"    pm.environment.set('refresh_token', jsonData.refresh_token);",
							"}"
						]
					}
				}
			]
		},
		{
			"name": "Refresh Token",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"refresh_token\": \"{{refresh_token}}\"\n}"
				},
				"url": {
					"raw": "{{auth_service_url}}/api/auth/refresh",
					"host": ["{{auth_service_url}}"],
					"path": ["api", "auth", "refresh"]
				}
			}
		},
		{
			"name": "Get Current User",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{access_token}}"
					}
				],
				"url": {
					"raw": "{{auth_service_url}}/api/auth/me",
					"host": ["{{auth_service_url}}"],
					"path": ["api", "auth", "me"]
				}
			}
		},
		{
			"name": "Logout",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{access_token}}"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"refresh_token\": \"{{refresh_token}}\"\n}"
				},
				"url": {
					"raw": "{{auth_service_url}}/api/auth/logout",
					"host": ["{{auth_service_url}}"],
					"path": ["api", "auth", "logout"]
				}
			}
		}
	],
	"variable": [
		{
			"key": "auth_service_url",
			"value": "http://localhost:8002",
			"type": "string"
		},
		{
			"key": "access_token",
			"value": "",
			"type": "string"
		},
		{
			"key": "refresh_token",
			"value": "",
			"type": "string"
		}
	]
}

