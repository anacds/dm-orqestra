{
	"info": {
		"_postman_id": "campaigns-service",
		"name": "Campaigns Service",
		"description": "Campaign management, comments, and creative pieces endpoints",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Campaigns",
			"item": [
				{
					"name": "Get All Campaigns",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							}
						],
						"url": {
							"raw": "{{campaigns_service_url}}/api/campaigns?skip=0&limit=100",
							"host": ["{{campaigns_service_url}}"],
							"path": ["api", "campaigns"],
							"query": [
								{
									"key": "skip",
									"value": "0"
								},
								{
									"key": "limit",
									"value": "100"
								}
							]
						}
					}
				},
				{
					"name": "Get Campaign by ID",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							}
						],
						"url": {
							"raw": "{{campaigns_service_url}}/api/campaigns/{{campaign_id}}",
							"host": ["{{campaigns_service_url}}"],
							"path": ["api", "campaigns", "{{campaign_id}}"]
						}
					}
				},
				{
					"name": "Create Campaign",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Nova Campanha\",\n  \"category\": \"PROMOTIONAL\",\n  \"businessObjective\": \"Aumentar vendas\",\n  \"expectedResult\": \"10% de aumento\",\n  \"requestingArea\": \"MARKETING\",\n  \"startDate\": \"2024-01-01\",\n  \"endDate\": \"2024-01-31\",\n  \"priority\": \"HIGH\",\n  \"communicationChannels\": [\"SMS\", \"Push\"],\n  \"commercialSpaces\": [\"Home\", \"Produto\"],\n  \"targetAudienceDescription\": \"Clientes ativos\",\n  \"exclusionCriteria\": \"Nenhum\",\n  \"estimatedImpactVolume\": \"10000\",\n  \"communicationTone\": \"Formal\",\n  \"executionModel\": \"AUTOMATED\"\n}"
						},
						"url": {
							"raw": "{{campaigns_service_url}}/api/campaigns",
							"host": ["{{campaigns_service_url}}"],
							"path": ["api", "campaigns"]
						}
					}
				},
				{
					"name": "Update Campaign",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Campanha Atualizada\",\n  \"status\": \"CREATIVE_STAGE\"\n}"
						},
						"url": {
							"raw": "{{campaigns_service_url}}/api/campaigns/{{campaign_id}}",
							"host": ["{{campaigns_service_url}}"],
							"path": ["api", "campaigns", "{{campaign_id}}"]
						}
					}
				},
				{
					"name": "Delete Campaign",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							}
						],
						"url": {
							"raw": "{{campaigns_service_url}}/api/campaigns/{{campaign_id}}",
							"host": ["{{campaigns_service_url}}"],
							"path": ["api", "campaigns", "{{campaign_id}}"]
						}
					}
				}
			]
		},
		{
			"name": "Comments",
			"item": [
				{
					"name": "Add Comment",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"text\": \"Este é um comentário de teste\"\n}"
						},
						"url": {
							"raw": "{{campaigns_service_url}}/api/campaigns/{{campaign_id}}/comments",
							"host": ["{{campaigns_service_url}}"],
							"path": ["api", "campaigns", "{{campaign_id}}", "comments"]
						}
					}
				}
			]
		},
		{
			"name": "Creative Pieces",
			"item": [
				{
					"name": "Submit Creative Piece (SMS/Push)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"pieceType\": \"SMS\",\n  \"text\": \"Oferta especial para você!\"\n}"
						},
						"url": {
							"raw": "{{campaigns_service_url}}/api/campaigns/{{campaign_id}}/creative-pieces",
							"host": ["{{campaigns_service_url}}"],
							"path": ["api", "campaigns", "{{campaign_id}}", "creative-pieces"]
						}
					}
				},
				{
					"name": "Upload App File",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							}
						],
						"body": {
							"mode": "formdata",
							"formdata": [
								{
									"key": "commercial_space",
									"value": "Home",
									"type": "text"
								},
								{
									"key": "file",
									"type": "file",
									"src": []
								}
							]
						},
						"url": {
							"raw": "{{campaigns_service_url}}/api/campaigns/{{campaign_id}}/creative-pieces/upload-app",
							"host": ["{{campaigns_service_url}}"],
							"path": ["api", "campaigns", "{{campaign_id}}", "creative-pieces", "upload-app"]
						}
					}
				},
				{
					"name": "Upload Email File",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							}
						],
						"body": {
							"mode": "formdata",
							"formdata": [
								{
									"key": "file",
									"type": "file",
									"src": []
								}
							]
						},
						"url": {
							"raw": "{{campaigns_service_url}}/api/campaigns/{{campaign_id}}/creative-pieces/upload-email",
							"host": ["{{campaigns_service_url}}"],
							"path": ["api", "campaigns", "{{campaign_id}}", "creative-pieces", "upload-email"]
						}
					}
				},
				{
					"name": "Delete App File",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							}
						],
						"url": {
							"raw": "{{campaigns_service_url}}/api/campaigns/{{campaign_id}}/creative-pieces/app/{{commercial_space}}",
							"host": ["{{campaigns_service_url}}"],
							"path": ["api", "campaigns", "{{campaign_id}}", "creative-pieces", "app", "{{commercial_space}}"]
						}
					}
				},
				{
					"name": "Delete Email File",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							}
						],
						"url": {
							"raw": "{{campaigns_service_url}}/api/campaigns/{{campaign_id}}/creative-pieces/email",
							"host": ["{{campaigns_service_url}}"],
							"path": ["api", "campaigns", "{{campaign_id}}", "creative-pieces", "email"]
						}
					}
				}
			]
		}
	],
	"variable": [
		{
			"key": "campaigns_service_url",
			"value": "http://localhost:8003",
			"type": "string"
		},
		{
			"key": "access_token",
			"value": "",
			"type": "string"
		},
		{
			"key": "campaign_id",
			"value": "",
			"type": "string"
		},
		{
			"key": "commercial_space",
			"value": "Home",
			"type": "string"
		}
	]
}

