{
  "annotations": { "list": [] },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "title": "Login — Tentativas / min",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "sum(rate(auth_login_attempts_total[5m])) by (result) * 60",
          "legendFormat": "{{result}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "reqpm" }
      }
    },
    {
      "title": "Login — Taxa de Sucesso (%)",
      "type": "gauge",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 0 },
      "targets": [
        {
          "expr": "sum(rate(auth_login_attempts_total{result=\"success\"}[5m])) / sum(rate(auth_login_attempts_total[5m])) * 100",
          "legendFormat": "Success Rate",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 70 },
              { "color": "green", "value": 90 }
            ]
          }
        }
      }
    },
    {
      "title": "Login — Falhas por Razão",
      "type": "piechart",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 0 },
      "targets": [
        {
          "expr": "sum(auth_login_attempts_total{result=\"failure\"}) by (failure_reason)",
          "legendFormat": "{{failure_reason}}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Token — Refresh / min",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "sum(rate(auth_token_refreshes_total[5m])) by (result) * 60",
          "legendFormat": "{{result}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "reqpm" }
      }
    },
    {
      "title": "Registros & Logouts / min",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "targets": [
        {
          "expr": "sum(rate(auth_user_registrations_total[5m])) by (result) * 60",
          "legendFormat": "Registro {{result}}",
          "refId": "A"
        },
        {
          "expr": "sum(rate(auth_logouts_total[5m])) * 60",
          "legendFormat": "Logout",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "reqpm" }
      }
    },
    {
      "title": "HTTP — Requests / min",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=\"auth-service\"}[5m])) by (status) * 60",
          "legendFormat": "HTTP {{status}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "reqpm" }
      }
    },
    {
      "title": "HTTP — Latência P95 (s)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"auth-service\"}[5m])) by (le, handler))",
          "legendFormat": "P95 {{handler}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "s" }
      }
    }
  ],
  "schemaVersion": 39,
  "tags": ["orqestra", "auth-service"],
  "templating": { "list": [] },
  "time": { "from": "now-1h", "to": "now" },
  "title": "Auth Service — Observability",
  "uid": "auth-service-obs",
  "version": 1
}
